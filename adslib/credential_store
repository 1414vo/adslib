import yaml
import pyDes

crypto = pyDes.des('DataScience')

def store_creds(username, password, filename):
    with open(filename, "w") as file:
        credentials_dict = {'username': crypto.encrypt(username),
                            'password': crypto.encrypt(password)}
        yaml.dump(credentials_dict, file)

def load_creds(filename):
    
    with open("credentials.yaml") as file:
        credentials = yaml.safe_load(file)
    username = crypto.decrypt(credentials["username"])
    password = crypto.decrypt(credentials["password"])

    return username, password